@model List<MiniPost>
@{
    ViewData["Title"] = "Index";
}

<div class="card mt-5" style="width: 95%;margin-left: 34px;">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th style="text-align: center;">Image</th>
                    <th style="text-align: center;">Description</th>
                    <th style="text-align: center;">Title</th>
                    <th style="text-align: center;"> Operations</th>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a class="btn btn-success text-white" asp-action="Create" style="float:right;margin: 22px;">Create</a>
                    }
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var post in Model)
                {
                    <tr data-id="@post.Id">
                        <td class="py-1" style="text-align: center;">
                            <img src="~/images/@post.Image" style="width: 297px;height:133px" alt="image" />
                        </td>
                        <td class="py-1" style="text-align: center;">
                            @post.Description
                        </td>
                        <td class="py-1" style="text-align: center;">
                            @post.Title
                        </td>

                        <td class="py-1" style="text-align: center;">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@post.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@post.Id">Edit</a>
                            <a class="btn btn-outline-danger delete-story">Delete</a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@section Scripts {

    <script src="~/admin/js/admin.js"></script>
}
