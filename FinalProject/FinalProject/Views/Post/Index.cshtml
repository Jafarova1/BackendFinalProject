@model MiniPostVM
@{
    ViewData["Title"] = "Index";
}
@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lovers+Quarrel&family=Lugrasimo&family=Lumanosimo&family=Playfair+Display+SC:ital@1&family=Playfair+Display:ital@1&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="~/./css/recipes.css">

}
<body>
    <section class="article-wrap" style="background-image: url(./images/bg_4.jpg); ">
        <div class="overlay">
        </div>
        <div class="container">
            <div class="row align-items-end justify-content-center">
                <div class="col-md-9 pb-5 text-center">
                    <h1 class="mb-3">Posts</h1>
                    <p class="items">
                        <span class="mr-2">
                            <a href="index.html">Home</a>
                            <i class="fa-solid fa-angle-right"></i>

                        </span>
                        <span>
                            Posts
                            <i class="fa-solid fa-angle-right"></i>
                        </span>
                    </p>

                </div>

            </div>

        </div>

    </section>
    <section class="recipes">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="row">
                      @foreach (var item in Model.MiniPosts)
                        {
                                 <div class="col-md-6 col-lg-12">
                                <div class="blog d-lg-flex">
                                    <div class="left">
                                        <a href="single.html" class="img d-flex align-items-end">
                                            <img src="./images/@item.Image" alt="">
                                        </a>

                                    </div>
                                    <div class="text px-md-4 px-lg-5 pt-3">
                                        <div class="meta ">
                                            <h3>@item.Title</h3>
                                            <p>
                                         @item.Description
                                            </p>
                                            <p class="mb-0">
                                                <a href="single.html" class="btn btn-primary">Read More</a>
                                            </p>

                                        </div>

                                    </div>

                                </div>
                            </div>

                        }
         

                    </div>
                    <!-- <div class="row mt-5">
                        <div class="nums text-center">
                            <div class="items">

                                <ul class="it">
                                    <li><a href=""><i class="fa-solid fa-chevron-left"></i></a></li>
                                    <li><a href="recipes.html">1</a></li>
                                    <li><a href="pagination.html">2</a></li>
                                    <li><a href="stories.html">3</a></li>
                                    <li><a href="stories.html">4</a></li>
                                    <li><a href="recipes.html">5</a></li>
                                    <li><a href="pagination.html">6</a></li>
                                    <li>
                                        <a href=""><i class="fa-solid fa-chevron-right"></i></a>
                                    </li>
                                  </ul>



                            </div>

                        </div>

                    </div> -->

                    <div class="paginate">
                        <div class="container">
                            <div class="pagination">
                                <button class="btn1" onclick="backBtn()">prev<i class="fa-solid fa-chevron-left"></i></button>
                                <ul>

                                    <a href="single.html">
                                    <li class="link active" value="1" onclick="activeLink()">1</li></a>
                                    <a href="pagination.html">
                                    <li class="link active" value="1" onclick="activeLink()">2</li></a>
                                    <a href="recipes.html">
                                    <li class="link active" value="1" onclick="activeLink()">3</li></a>
                                    <!-- <a href="single.html">  <li  class="link active" value="1" onclick="activeLink()">4</li></a>
                                    <a href="pagination.html">  <li  class="link active" value="1" onclick="activeLink()">5</li></a>
                                    <a href="stories.html">  <li  class="link active" value="1" onclick="activeLink()">6</li></a> -->
                                </ul>
                                <button class="btn2" onclick="nextBtn()"><i class="fa-solid fa-chevron-right"></i> next </button>
                            </div>

                        </div>

                    </div>

                </div>
                <div class="col-lg-3">
                    <div class="sidebar-wrap">
                        <div class="sidebar-box p-4 about text-center ">
                            <h2 class="heading mb-4">About Me</h2>
                            <img src="images/me.jpeg" class="img-fluid">
                            <div class="about pt-4">
                                <p>
                                    Hi! My name is <strong>Gultaj Jafarova</strong>, behind the word mountains, far
                                    from the countries Vokalia and Consonantia, there live the blind texts.
                                    Separated they live in Bookmarksgrove right at the coast of the Semantics,
                                    a large language ocean.
                                </p>
                            </div>
                        </div>
                        <div class="sidebar-box p-4">
                            <div class="form-container">
                                <form class="form">
                                    <input id="search" type="text" class="input" placeholder="search..." />
                                </form>

                            </div>
                            <div class="results-container">
                                <ul class="results-list" id="list">
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="sidebar pt-4">
                                <div class="sidebar-box text-center">
                                    <div class="heading mb-4">

                                        <ul class="category-image">
                                          @foreach (var item in Model.Advertisments)
                                            {
                                                <li>
                                                    <a href="menu.html"
                                                       class="img d-flex align-items-center justify-content-center text-center">
                                                        <img src="images/@item.Image" alt="">
                                                    </a>
                                                    <h3>@item.Title</h3>
                                                </li>
                                            }
                                       
                                        </ul>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>

    </section>
    <section class="advertisment" id="section-counter" style="background-image: url(images/bg_4.jpg);
        background-position: 50% -189px; filter: grayscale(10%); opacity: 1;">
        <div class="background-overlay"></div>
        <div class="container">
            <!-- <h1>Love the delicious and tasty foods</h1> -->
            <h1>Subcribe to our Newsletter</h1>
            <p>
                A small river named Duden flows by their place and supplies it with the necessary regelialia. It is <br> a
                paradisematic country, in which roasted parts of sentences fly into your mouth.
            </p>
            <div class="row d-flex justify-content-center mt-4 mb-4">
                <div class="col-md-8">
                    <form action="">
                        <div class="form-group d-flex">
                            <input type="text" placeholder="Enter Email Adress">
                            <input type="submit" value="Subscribe" class="submitt px-3">

                        </div>
                    </form>
                </div>

            </div>

        </div>
    </section>
</body>



@section Scripts {

    <script src="~/./js/script.js"></script>
    <script src="~/./js/search.js"></script>
    <script src="~/./js/paginate.js"></script>
}
